extends ../../layouts/admin

include ../../mixins/boxTitle
include ../../mixins/boxCreate
include ../../mixins/formSort
include ../../mixins/formSearch
include ../../mixins/formAction
include ../../mixins/pagination

block main
  +boxTitle(pageTitle)

  +boxCreate(`/${admin}/articleGroups/create`)

  form(form-filter)
    label.form-label Bộ lọc
    .input-group.mb-3
      select(
        class="form-select"
        name="filter"
      )
        each filterOption in filter.filterOptions
          option(
            value=filterOption.value 
            selected=(filter.filter === filterOption.value)
          ) #{filterOption.title}

  +formSort(sort)

  +formSearch(keyword, "Tìm kiếm theo tiêu đề bài viết cộng đồng...")

  +formAction(`${url.base}/actions?_method=PATCH`, actionOptions)

  table.table
    thead
      tr
        th(scope="col")
          input(
            class="form-check-input"
            type="checkbox"
            name="checkbox-all"
          )
        th(scope="col") #
        th(scope="col") Tiêu đề
        th(scope="col") Nhóm
        th(scope="col") Trạng thái
        th(scope="col") Hành động
    tbody
      each articleGroup, index in articleGroups
        tr
          th(scope="row")
            input(
              class="form-check-input"
              type="checkbox"
              name="checkbox"
              value=articleGroup.id
            )
          th(scope="row") #{((pagination.page - 1) * pagination.limit) + (index + 1)}
          td #{articleGroup.title}
          td #{groups[index].title}
          td
            form(
              method="POST"
              id=articleGroup.id
              form-update-status
            )
              select(
                class="form-select"
                name="status"
                required
              )
                option(value="active" selected=(articleGroup.status === "active")) Hoạt động
                option(value="inactive" selected=(articleGroup.status === "inactive")) Ngưng hoạt động
          td
            a(class="btn btn-primary" href=`/${admin}/articleGroups/detail/${articleGroup.id}`) Xem 
            a(class="btn btn-warning mx-1" href=`/${admin}/articleGroups/update/${articleGroup.id}`) Sửa
            form(
              class="d-inline"
              method="POST"
              action=`/${admin}/articleGroups/delete/${articleGroup.id}?_method=DELETE`
              form-delete-item
            )
              button.btn.btn-danger Xóa
  
  +pagination(url, pagination.page, pagination.maxPage, pagination.limit)