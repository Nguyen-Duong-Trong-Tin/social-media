extends ../../layouts/admin

include ../../mixins/boxGoBack
include ../../mixins/boxTitle

block main
  +boxGoBack(`/${admin}/taskGroupSubmissions`)

  +boxTitle(pageTitle)

  form(
    method="POST"
    action=`/${admin}/taskGroupSubmissions/create`
    enctype="multipart/form-data"
  )
    .mb-3
      label.form-label Title
      input(
        class="form-control"
        name="title"
        required
      )
    .mb-3
      label.form-label Description
      textarea(
        name="description"
        tinymce
      )
    .mb-3
      label.form-label Images
      input(
        class="form-control"
        type="file"
        name="images"
        accept="image/*"
        multiple
        chooseMaxFileQuantity=6
      )
    .mb-3
      label.form-label Videos
      input(
        class="form-control"
        type="file"
        name="videos"
        accept="video/mp4,video/x-m4v,video/*"
        multiple
        chooseMaxFileQuantity=6
      )
    .mb-3
      label.form-label Materials
      input(
        class="form-control"
        type="file"
        name="materials"
        accept=".pdf,.doc,.docx"
        multiple
        chooseMaxFileQuantity=6
      )
    .mb-3
      label.form-label Status
      select(
        class="form-select"
        name="status"
        required
      )
        option(value="active") Active
        option(value="inactive") Inactive
    .mb-3
      label.form-label Owner
      select(
        class="form-select"
        name="userId"
        required
      )
        option(value="") ---
        each user in users
          option(value=user.id) #{user.fullName} - #{user.phone}

    .mb-3
      label.form-label Group task
      select(
        class="form-select"
        name="taskGroupId"
        required
      )
        option(value="") ---
        each taskGroup in taskGroups
          option(value=taskGroup.id) #{taskGroup.title}
    
    .d-flex.justify-content-center.mb-3
      button.btn.btn-primary Add