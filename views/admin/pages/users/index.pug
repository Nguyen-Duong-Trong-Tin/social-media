extends ../../layouts/admin

include ../../mixins/boxTitle
include ../../mixins/boxCreate
include ../../mixins/formSort
include ../../mixins/formSearch
include ../../mixins/formAction
include ../../mixins/pagination

block main
  +boxTitle(pageTitle)

  +boxCreate(`/${admin}/users/create`)

  form(form-filter)
    label.form-label Filter
    .input-group.mb-3
      select(
        class="form-select"
        name="filter"
      )
        each filterOption in filter.filterOptions
          option(
            value=filterOption.value 
            selected=(filter.filter === filterOption.value)
          ) #{filterOption.title}

  +formSort(sort)

  +formSearch(keyword, "Search by full name...")

  +formAction(`${url.base}/actions?_method=PATCH`, actionOptions)

  table.table
    thead
      tr
        th(scope="col")
          input(
            class="form-check-input"
            type="checkbox"
            name="checkbox-all"
          )
        th(scope="col") #
        th(scope="col") Image
        th(scope="col") Full name
        th(scope="col") Email
        th(scope="col") Status
        th(scope="col") Actions
    tbody
      each user, index in users
        tr
          th(scope="row")
            input(
              class="form-check-input"
              type="checkbox"
              name="checkbox"
              value=user.id
            )
          th(scope="row") #{((pagination.page - 1) * pagination.limit) + (index + 1)}
          td(style="width: 15%")
            img(class="img-thumbnail" src=user.avatar)
          td #{user.fullName}
          td #{user.email}
          td
            form(
              method="POST"
              id=user.id
              form-update-status
            )
              select(
                class="form-select"
                name="status"
                required
              )
                option(value="active" selected=(user.status === "active")) Active
                option(value="inactive" selected=(user.status === "inactive")) Inactive
          td
            a(class="btn btn-primary" href=`/${admin}/users/detail/${user.id}`) Detail 
            a(class="btn btn-warning mx-1" href=`/${admin}/users/update/${user.id}`) Edit
            form(
              class="d-inline"
              method="POST"
              action=`/${admin}/users/delete/${user.id}?_method=DELETE`
              form-delete-item
            )
              button.btn.btn-danger Delete
  
  +pagination(url, pagination.page, pagination.maxPage, pagination.limit)