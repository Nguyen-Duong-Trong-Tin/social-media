extends ../../layouts/admin

include ../../mixins/boxGoBack
include ../../mixins/boxTitle

block main
  +boxGoBack(`/${admin}/users`)

  +boxTitle(pageTitle)

  form(
    method="POST"
    action=`/${admin}/users/create`
    enctype="multipart/form-data"
  )
    .mb-3
      label.form-label Full name
      input(
        class="form-control"
        name="fullName"
        required
      )
    .mb-3
      label.form-label Email
      input(
        class="form-control"
        type="email"
        name="email"
        required
      )
    .mb-3
      label.form-label Password
      input(
        class="form-control"
        type="password"
        name="password"
        required
      )
    .mb-3
      label.form-label Phone
      input(
        class="form-control"
        name="phone"
        required
      )
    .mb-3
      label.form-label Image
      input(
        class="form-control"
        type="file"
        name="avatar"
        accept="image/*"
        required
      )
    .mb-3
      label.form-label Cover photo
      input(
        class="form-control"
        type="file"
        name="coverPhoto"
        accept="image/*"
        required
      )
    .mb-3
      label.form-label Bio
      textarea(
        name="bio"
        tinymce
      )
    .mb-3
      label.form-label Status
      select(
        class="form-select"
        name="status"
        required
      )
        option(value="active") Active
        option(value="inactive") Inactive
    
    .d-flex.justify-content-center.mb-3
      button.btn.btn-primary Add