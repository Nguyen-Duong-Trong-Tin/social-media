extends ../../layouts/admin

include ../../mixins/boxGoBack
include ../../mixins/boxTitle

block main
  +boxGoBack(`/${admin}/taskGroups`)

  +boxTitle(pageTitle)

  form(
    method="POST"
    action=`/${admin}/taskGroups/update/${taskGroup.id}?_method=PATCH`
    enctype="multipart/form-data"
  )
    .mb-3
      label.form-label Title
      input(
        class="form-control"
        name="title"
        value=taskGroup.title
        required
      )
    .mb-3
      label.form-label Description
      textarea(
        name="description"
        tinymce
      ) #{taskGroup.description}
    .mb-3
      label.form-label Images
      each image in taskGroup.images
        .w-50.mb-1
          img(
            class="img-thumbnail"
            src=image
          )
      input(
        class="form-control"
        type="file"
        name="images"
        accept="image/*"
        multiple
        chooseMaxFileQuantity=6
      )
    .mb-3
      label.form-label Videos
      each video in taskGroup.videos
        .w-50.mb-1
          video(
            width="100%"
            controls
          )
            source(
              type="video/mp4"
              src=video
          )
      input(
        class="form-control"
        type="file"
        name="videos"
        accept="video/mp4,video/x-m4v,video/*"
        multiple
        chooseMaxFileQuantity=6
      )
    .mb-3
      label.form-label Status
      select(
        class="form-select"
        name="status"
        required
      )
        option(value="active" selected=(taskGroup.status === "active")) Active
        option(value="inactive" selected=(taskGroup.status === "inactive")) Inactive
    .mb-3
      label.form-label Onwer
      select(
        class="form-select"
        name="userId"
        required
      )
        option(value="") ---
        each user in users
          option(value=user.id selected=(user.id === taskGroup.createdBy.userId)) #{user.fullName} - #{user.phone}

    .mb-3
      label.form-label Group
      select(
        class="form-select"
        name="groupId"
        required
      )
        option(value="") ---
        each group in groups
          option(value=group.id selected=(group.id === taskGroup.groupId)) #{group.title}
    
    .d-flex.justify-content-center.mb-3
      button.btn.btn-primary Update