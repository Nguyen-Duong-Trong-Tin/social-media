doctype html
html
  head
    title #{pageTitle}

    link(
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    )

    link(rel="stylesheet" href="/css/root.css")
    link(rel="stylesheet" href="/css/index.css")

    script(
      src=`https://cdn.tiny.cloud/1/${process.env.TINYMCE_API_KEY}/tinymce/7/tinymce.min.js`
      referrerpolicy="origin"
    )

  body
    - if (messages.success)
      .flash.flash-success
        span #{messages.success}
    - if (messages.error)
      .flash.flash-error
        span #{messages.error}

    include ../partials/header

    main.main
      .row
        .col-2
          include ../partials/menu
        .col-10
          .container
            block main
      
    include ../partials/footer
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    )

    script(src="/js/buttonGoBack.js")
    script(src="/js/flash.js")
    script(type="module" src="/js/formAction.js") 
    script(src="/js/formDeleteItem.js")
    script(type="module" src="/js/formFilter.js")  
    script(type="module" src="/js/formSearch.js")  
    script(type="module" src="/js/formSort.js")
    script(type="module" src="/js/formUpdateStatus.js")
    script(src="/js/tinymce.js")