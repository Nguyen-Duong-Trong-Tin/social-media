extends ../../layouts/admin

include ../../mixins/boxGoBack
include ../../mixins/boxTitle

block main
  +boxGoBack(`/${admin}/groups`)

  +boxTitle(pageTitle)

  form(
    method="POST"
    action=`/${admin}/groups/create`
    enctype="multipart/form-data"
  )
    .mb-3
      label.form-label Title
      input(
        class="form-control"
        name="title"
        required
      )
    .mb-3
      label.form-label Description
      textarea(
        name="description"
        tinymce
      )
    .mb-3
      label.form-label Avatar
      input(
        class="form-control"
        type="file"
        name="avatar"
        accept="image/*"
        required
      )
    .mb-3
      label.form-label Cover photo
      input(
        class="form-control"
        type="file"
        name="coverPhoto"
        accept="image/*"
        required
      )
    .mb-3
      label.form-label Status
      select(
        class="form-select"
        name="status"
        required
      )
        option(value="active") Active
        option(value="inactive") Inactive
    .mb-3
      label.form-label Owner
      select(
        class="form-select"
        name="userId"
        required
      )
        option(value="") ---
        each user in users
          option(value=user.id) #{user.fullName} - #{user.phone}

    .mb-3
      label.form-label Group topic
      select(
        class="form-select"
        name="groupTopicId"
        required
      )
        option(value="") ---
        each groupTopic in groupTopics
          option(value=groupTopic.id) #{groupTopic.title}
    
    .d-flex.justify-content-center.mb-3
      button.btn.btn-primary Add