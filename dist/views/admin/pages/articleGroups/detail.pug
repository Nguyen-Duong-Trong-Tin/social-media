extends ../../layouts/admin

include ../../mixins/boxGoBack
include ../../mixins/boxTitle

block main
  +boxGoBack(`/${admin}/articleGroups`)

  +boxTitle(pageTitle)

  .mb-3
    label.form-label Title
    input(
      class="form-control"
      value=articleGroup.title
      readonly
    )
  .mb-3
    label.form-label Description
    textarea(
      tinymce
      readonly
    ) #{articleGroup.description}
  .mb-3
    label.form-label Images
    each image in articleGroup.images
      .w-50.mb-1
        img(
          class="img-thumbnail"
          src=image
        )
  .mb-3
    label.form-label Videos
    each video in articleGroup.videos
      .w-50.mb-1
        video(
          width="100%"
          controls
        )
          source(
            type="video/mp4"
            src=video
        )
  .mb-3
    label.form-label Status
    select(
      class="form-select"
      disabled
    )
      option(value="active" selected=(articleGroup.status === "active")) Active
      option(value="inactive" selected=(articleGroup.status === "inactive")) Inactive
  .mb-3
    label.form-label Onwer
    select(
      class="form-select"
      disabled
    )
      option(value="") ---
      each user in users
        option(value=user.id selected=(user.id === articleGroup.createdBy.userId)) #{user.fullName} - #{user.phone}

  .mb-3
    label.form-label Group
    select(
      class="form-select"
      disabled
    )
      option(value="") ---
      each group in groups
        option(value=group.id selected=(group.id === articleGroup.groupId)) #{group.title}