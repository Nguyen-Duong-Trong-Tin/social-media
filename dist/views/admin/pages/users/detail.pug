extends ../../layouts/admin

include ../../mixins/boxGoBack
include ../../mixins/boxTitle

block main
  +boxGoBack(`/${admin}/users`)

  +boxTitle(pageTitle)

  .mb-3
    label.form-label Full name
    input(
      class="form-control"
      value=user.fullName
      readonly
    )
  .mb-3
    label.form-label Email
    input(
      class="form-control"
      type="email"
      value=user.email
      readonly
    )
  .mb-3
    label.form-label Phone
    input(
      class="form-control"
      value=user.phone
      readonly
    )
  .mb-3
    label.form-label Image
    .w-25.mb-1
      img(
        class="img-thumbnail"
        src=user.avatar
      )
  .mb-3
    label.form-label Cover photo
    .w-25.mb-1
      img(
        class="img-thumbnail"
        src=user.coverPhoto
      )
  .mb-3
    label.form-label Bio
    textarea(
      name="bio"
      tinymce
      readonly
    ) #{user.bio}
  .mb-3
    label.form-label Status
    select(
      class="form-select"
      disabled
    )
      option(value="active" selected=(user.status === "active")) Active
      option(value="inactive" selected=(user.status === "inactive")) Inactive