extends ../../layouts/admin

include ../../mixins/boxGoBack
include ../../mixins/boxTitle

block main
  +boxGoBack(`/${admin}/users`)

  +boxTitle(pageTitle)

  form(
    method="POST"
    action=`/${admin}/users/update/${user.id}?_method=PATCH`
    enctype="multipart/form-data"
  )
    .mb-3
      label.form-label Full name
      input(
        class="form-control"
        name="fullName"
        value=user.fullName
        required
      )
    .mb-3
      label.form-label Email
      input(
        class="form-control"
        type="email"
        name="email"
        value=user.email
        required
      )
    .mb-3
      label.form-label Phone
      input(
        class="form-control"
        name="phone"
        value=user.phone
        required
      )
    .mb-3
      label.form-label Image
      .w-25.mb-1
        img(
          class="img-thumbnail"
          src=user.avatar
        )
      input(
        class="form-control"
        type="file"
        name="avatar"
        accept="image/*"
        value=user.avatar
      )
    .mb-3
      label.form-label Cover photo
      .w-25.mb-1
        img(
          class="img-thumbnail"
          src=user.coverPhoto
        )
      input(
        class="form-control"
        type="file"
        name="coverPhoto"
        accept="image/*"
        value=user.coverPhoto
      )
    .mb-3
      label.form-label Bio
      textarea(
        name="bio"
        tinymce
      ) #{user.bio}
    .mb-3
      label.form-label Status
      select(
        class="form-select"
        name="status"
        required
      )
        option(value="active" selected=(user.status === "active")) Active
        option(value="inactive" selected=(user.status === "inactive")) Inactive
    
    .d-flex.justify-content-center.mb-3
      button.btn.btn-primary Update